mixin card(header, waterMark, imageSrcMob, imageSrcDesk, filterCls,  imageAlt, text1, text2)
  article.card
      h2.card__header=header
      .card__image-container
        span.card__image-text &lt;#{waterMark}&gt;
        picture
          source(srcset=imageSrcMob media="(min-width: 320px)")
          source(srcset=imageSrcDesk media="(min-width: 720px)")
          img(class=["card__image",filterCls] src=imageSrcMob alt=imageAlt)
      .card__body
        .card__text-container
          p.card__text= text1
          p.card__text= text2
        .card__buttons
          button.card__icon-button
            svg(xmlns="http://www.w3.org/2000/svg" width="39" height="36" class="like-icon")
